<div class="row" id="signup">
  <div class="col-md-4 col-md-offset-4">
    <h1>Sign Up</h1>
    {{# if hasErrors}}
    <div class="alert alert-danger">
      {{# each messages}}
      <p>{{this}}</p>
      {{/each}}
    </div>
    {{/if}}
    <form action="/user/signup" method="post">
      <div class="form-group">
        <label for="email">E-Mail</label>
        <input type="text" id="email" name="email" class="form-control" />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control" />
      </div>
     <input type="hidden" name="_csrf" value="{{csrfToken}}" />
          <div class="form-group">
       <div class="g-recaptcha" data-sitekey="6LcHO08UAAAAAD_Ie7tpisi716QTsEi8kFGKACp8" style="transform:scale(0.77);-webkit-transform:scale(0.77);transform-origin:0 0;-webkit-transform-origin:0 0;"></div>
  </div>
      <button type="submit" class="btn btn-primary">Sign Up</button>&nbsp;
    </form>
  </div>
</div>
